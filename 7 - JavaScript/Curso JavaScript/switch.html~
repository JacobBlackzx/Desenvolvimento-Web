<!Doctype html>
<html lang="pt-br">
	<head>
		<title>Switch</title>
		<meta charset="utf-8" />
		
		<script type="text/javascript" >
			
			var opcao = 1;
			
			// Inicia uma comparação ==
			switch(opcao) {
				case 1:
					// Se opção = 1;
					document.write('Opção 1 foi selecionada');
					break;
				
				case 2:
					// Se opção = 2;
					document.write('Opção 2 foi selecionada');
					break;
				
				case 3:
					// Se opção = 3;
					document.write('Opção 3 foi selecionada');
					break;
				
				default:
					// Se opção não encontrada;
					document.write('Opção inválida');
			}
			
		</script>
		
	</head>
	
	<body>
		
	</body>
</html>