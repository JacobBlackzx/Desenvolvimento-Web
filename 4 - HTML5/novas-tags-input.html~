		<form>
<!-- Associar Label com os elementos - Boas Práticas  -->
		
			<label for="nome">Nome</label>
			<input type="text" id="nome" autofocus="" /><br /><br />

<!-- Novos Inputs e Atributos HTML5 -->

			<label for="email">E-mail</label>
			<input type="email" id="email" placeholder="email@email.com" autofocus="" required="" /><br /><br />

<!-- Tag Número -->

			<label for="numero">Número</label>
			<input type="number" id="numero" autofocus="" min="5" max="10" step="2" /><br /><br />

<!-- Tag URL -->
			
			<label for="url">Url</label>
			<input type="url" id="url" autofocus="" placeholder="Ex: http://www." /><br /><br />

<!-- Tag Pesquisar -->
			
			<label for="pesquisa">Pesquisar</label>
			<input type="search" id="pesquisa" autofocus="" placeholder="Ex: Digite algo..." /><br /><br />

<!-- Tag Range -->

			<label for="range">Rage</label>
			<input type="range" id="range" /><br /><br />

<!-- Tag Data -->

			<label for="data">Data</label>
			<input type="date" id="data" required="" /><br /><br />

<!-- Tag Cor -->

			<label for="cor">Cor</label>
			<input type="color" id="cor" />
			
			<input type="submit" value="Enviar" />
